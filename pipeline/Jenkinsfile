pipeline {
    agent any
    triggers { 
        pollSCM('H */4 * * 1-5') 
    }
    stages {
        stage('Git checkout') {
            steps {
                git branch: "main",
                    credentialsId: "jenkins-github-ssh-credentials",
                    url: "git@github.com:duongphamtb/jenkins_test.git"
            }
        }
        stage('Build') {
            steps {
                echo 'build lan 2..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}